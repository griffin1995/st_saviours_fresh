{
  "mcpServers": {
    "gmail": {
      "command": "npx",
      "args": [
        "-y",
        "@smithery/cli@latest",
        "run",
        "@gongrzhe/server-gmail-autoauth-mcp"
      ],
      "description": "Gmail MCP server for email access and management",
      "capabilities": [
        "email-reading",
        "email-sending",
        "label-management",
        "search",
        "drafts"
      ]
    },
    "context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ],
      "description": "Context7 MCP for intelligent code context and web search capabilities",
      "capabilities": [
        "code-search",
        "documentation-access",
        "semantic-search",
        "web-search"
      ],
      "env": {
        "CONTEXT7_API_KEY": "${CONTEXT7_API_KEY}"
      }
    }
  }
}
